{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "ConnectionStrings": {
    "GroovarrDb": "Data Source=data/groovarr.db",
    "AuthDb": "Data Source=data/auth.db"
  },
  "DatabaseProvider": {
    "GroovarrDb": "sqlite",
    "AuthDb": "sqlite"
  },
  "AllowedHosts": "*",
  "DeveloperSettings": {
    "EnableDetailedErrors": true,
    "EnableSensitiveDataLogging": true
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      }
    }
  } 
}
